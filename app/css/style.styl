@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em

.main-cont
	center(1200px,10px)

.page
	f()
	fl()
	min-height 100vh

.content
	flex-grow 1

.content--mid
	flex(mid)

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 10
// animate top menu === end

// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	margin-bottom: 30px
	font-weight: 700
	color $gray
.page-error__img
	margin-bottom: 30px
.page-error__text
	@extend .type--md
	color $gray
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(640px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9) translateZ(0) translate3d(0, 0, 0)
	will-change: transform, opacity;
	backface-visibility: hidden
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	max-width 400px
	left -9999px
	top -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0

.modal-content
	+below(640px)
		height: 100%
		padding: 20px
		overflow-y scroll
		width: 95%!important
	margin: 20px auto
	background: white
	position: relative
	padding: 40px 45px
	br(40px)

.modal__show
	max-height 100%
	opacity 1
	transform scale(1) translateZ(0) translate3d(0, 0, 0)
	position: relative
	z-index 1000
	left initial
	top initial
	transition transform .6s, opacity .8s
	will-change: transform, opacity

.modal-close
	+below(768px)
		top 12px
		right 12px
	position: absolute
	top: 20px
	right: 20px
	cp()
	size 50px
	br(20px)
	flex(mid)
	z-index 10
	background: #f8f8f8
	&:hover
		.icon
			opacity: 1
	.icon
		tr()
		size 12px
		fill black
		opacity:.3

.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 20px
	margin-bottom: 20px
	text-align: center
	@extend .type--xl
	font-weight: 700

.modal-text
	+below(768px)
		width: 100%
		font-size: 12px
	text-align: center
	margin: 20px auto
	//width: 80%
	line-height: 1.6


.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%
// modal === end

// drop
.dropdown
	width: 100%
	display inline-block
	br(4px)
	tr()
	position relative
	border 1px solid $border-color
	outline none!important
.dropdown-current
	cursor pointer
	display block
	padding 10px
	padding-right 25px
	font-weight: 700
	.icon
		position absolute
		top calc(50% - 6px)
		right 10px
		size 12px
		tr()

.dropdown.active
	border-radius 4px 4px 0 0
	.icon
		transform rotate(180deg)

.dropdown-menu
	position absolute
	background-color #fff
	width calc(100% + 2px)
	left -1px
	margin-top -1px
	border-radius 0 0 4px 4px
	overflow hidden
	display none
	max-height 200px
	overflow-y auto
	z-index 10
	border 1px solid $border-color
.dropdown-menu__el
	padding 10px
	cp()
	tr()
	border-bottom 1px solid $border-color
	//background: #f9f9f9
	&:last-child
		border 0
	&:hover
		background: white
		color black
// drop === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	border 1px solid $border-color
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

//.toolbar
.toolbar-top-wrap
	background: black
//.main-cont
.toolbar-top
	f()
	height: 75px
	align-items center
.logo
	flex(mid)
	img
		width: 140px
.logo__img
	margin-right: 10px
.logo__text
	color white
	font-size: 9px
.phone
	margin 0 20px 0 auto
	f()
	align-items center
	&:hover
		span
			color $green
		.icon
			fill $green
	.icon
		tr()
		fill white
		size 18px
		margin-right: 10px
	span
		tr()
		color white
		@extend .type--lg
.toolbar-order
	margin-left: 5%
.nav-wrap
	background: white
.nav
	flex(between)
	height: 75px
	font-weight: 700
.nav__el
	padding: 5px
	up()
	&:hover
		color $green
.nav__el--active
	color $green

.banner
	height calc(100vh - 150px)
	bg-full()
.slogan-wrap
	height: 100%
	f()
	fl()
	justify-content center
.slogan
	color white
	up()
.slogan__title
	font-weight: 700
	font-size: 96px
.slogan__title-sub
	@extend .type--xl
	font-weight 700
	margin-bottom: 10px
.slogan__text
	@extend .type--md
	margin-bottom: 40px
//.btn--white

.soc-row
	f()
.soc-row__el
	round()
	flex(mid)
	tr(all)
	margin-right: 10px
	size 30px
	background: white
	&:hover
		background: $green
		.icon
			fill white
	.icon
		size 14px

.section
	padding: 120px 0

.section--dark
	background: black
	color white
	.book-row__dot
		border-color #ffffff47
	.slider-wrap--simple
		.slider-control
			border 1px solid white
			.icon
				fill white
			&:hover
				background: white
				.icon
					fill black
.section-title
	@extend .type--xl
	up()
	font-weight: 700
	margin-bottom: 60px
	text-align center

.advant
	flex(between)
.advant__el
	flex(mid)
	fl()
.advant__el-icon
	.icon
		size 64px
	margin-bottom: 15px
.advant__el-text
	up()
	margin-bottom: 10px
.advant__el-title
	@extend .type--lg
	font-weight: 700
	up()

// card
.card-wrap
	+below(768px)
		fw()
	f()
	justify-content space-between
	margin-bottom: 40px
.card-img
	+below(768px)
		width: 100%
	width 50%
	.gallery-slider-wrap
		margin-top: 0
.gallery__el
	bg-full()
	padding: 34% 10%
.gallery__el-nav
	bg-full()
	cp()
	padding: 34% 10%
	border-right 3px solid black
.card-descr
	width: 45%
	margin-left: 5%
	padding-right: 10px
// card === end

.book-row
	f()
	fw()
	align-items: flex-end
	margin-bottom: 20px
.book-row__title
	max-width: 40%
.book-row__dot
	border-bottom 1px dashed #00000017
	flex-grow 1
.book-row__value
	max-width: 40%
	white-space nowrap
	vertical-align: bottom

// === убираем выделения активности при клик ===
.slick-slide
	&:hover
		outline none!important
	&:active
		outline none!important
	&:focus
		outline none!important
// === убираем выделения активности при клике end ===

// === for custom navigation ===
.slider-wrap
	position relative

//Навигация снаружи
.slider-wrap--simple
	.slider-control
		flex(mid)
		tr(all)
		size 40px
		position: absolute
		top 50%
		margin-top: -40px
		z-index 10
		cp()
		border 1px solid red
		&:hover
			background: $red
			.icon
				fill white
		.icon
			tr()
			size 14px
	.slider-control--left
		left -60px
	.slider-control--right
		right -60px
//Навигация снаружи end

//Навигация внутри
.slider-wrap--inarrow
	.slider-control
		flex(mid)
		tr(all)
		position: absolute
		top 50%
		margin-top: -20px
		z-index 10
		padding: 20px 10px
		background: black
		cp()
		opacity: .6
		&:hover
			opacity: 1
			.icon
				fill white
		.icon
			fill white
			size 30px
	.slider-control--left
		left 0
	.slider-control--right
		right 0
//Навигация внутри
// === for custom navigation ===

//=== Внешний вид пагинации ===
.slick-dots
	+below(720px)
		bottom -20px
	width: 100%
	display: flex !important
	align-items: center
	justify-content: center
	bottom -50px
	li
		+below(720px)
			size 10px
			flex(mid)
	.dot
		+below(720px)
			flex(mid)
			size 6px
		background: $mark
		width: 20px
		height: 4px
		display: block
		br(3px)
		opacity: .5
	.slick-active
		.dot
			opacity: 1
//=== Внешний вид пагинации end===

// tab
.tab
	f()
	border-bottom 1px solid $border-color
.tab--fluid-modal
	margin-left -32px
	margin-right -32px
	.tab__el
		+below(640px)
			font-size: 14px
		padding-top: 0

.tab__el
	+below(640px)
		padding: 10px 10px 12px 10px
	flex-grow 1
	text-align center
	font-weight: 500
	padding: 20px 20px 16px 20px
	color black
	border-bottom 4px solid transparent
	tr()
	cp()
	width: 100%
	up()
	@extend .type--lg
	&.active
		font-weight: 700
		border-bottom 4px solid $mark
.tab-cont
	background: white
	opacity: 0
	left -9999px
	visibility: hidden
	position absolute
	transform translateY(-10px)
	transition opacity .6s, transform .6s
	&.active
		transform translateY(0px)
		visibility: visible
		opacity: 1
		left initial
		position: static
// tab === end