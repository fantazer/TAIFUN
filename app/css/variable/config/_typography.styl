//font(name,file,size)
font('Roboto','Roboto-Bold',700)
font('Roboto','Roboto-Regular',400)
font('Roboto','Roboto-Light',300)

$v-font =  'Roboto', sans-serif

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

/*
font-size 12px
@extend .type--sm

font-size 14px
@extend .type--main

font-size 18px
@extend .type--md

font-size 24px
@extend .type--lg

font-size 36px
@extend .type--lgx

font-size 48px
@extend .type--xl
*/


.type--sm
	typeSize(12,10)

.type--main
	typeSize(14,14)

.type--md
	typeSize(18,15)

.type--lg
	typeSize(24,18)

.type--lgx
	typeSize(36,24)

.type--xl
	typeSize(48,20)

.type--mark
	color $mark

.type--bold
	font-weight bold

.type--center
	text-align center

.title
	up()

.title--sm
	@extend .type--sm

.title--main
	@extend .type--main

.title--md
	@extend .type--md

.title--lg
	@extend .type--lg

.title--xl
	@extend .type--xl

h5
	@extend .type--sm
h4
	@extend .type--main
h3
	@extend .type--md
h2
	@extend .type--lg
h1
	@extend .type--xl

a
	color $link-color
	text-decoration: none
	tr()
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

p
	@extend .type--main

.link--mark
	color $mark
	&:hover
		color darken($mark,20)
	&:visiter
		color darken($mark,30)

.link--main
	color $link-color
	hover-underline($link-color)
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

.link--text
	color $link-color
	text-decoration underline
	&:hover
		text-decoration none



.text
	p
		line-height: 1.6
		margin-bottom: 30px
	ul
		margin-bottom: 30px
		li
			line-height: 1.6
			margin-bottom: 10px
			&:last-child
				margin-bottom: 0

// icons
.icon-row
	f()
	fw()
	align-items center

.icon--sm
	size 16px

.icon--md
	size 24px

.icon--left
	margin-left: 10px

.icon--right
	margin-right: 10px

.icon--mark
	fill $mark

.icon--gray
	fill $gray
// icons === end